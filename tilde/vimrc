" === General Setup ===
set nocompatible            " Use Vim settings, rather then Vi settings
syntax enable               " Activate Syntax Highlight
filetype plugin indent on
set encoding=utf-8
set nowrap                  " Deactivate Wrapping
set nrformats=              " Treat all numbers as decimal
set noswapfile              " I don't like Swapfiles
set spell spelllang=en_us   " Activate spell checking and set American as default
set nojoinspaces            " Insert only one space when joining lines
set hlsearch                " Highlight Search Results
set laststatus=2            " Always show status line
set ttimeout
set ttimeoutlen=100
highlight clear SignColumn  " Fix the weird gray color of the gutter

" === colorscheme ===
colorscheme monochrome

" === fzf ===
set rtp+=~/.fzf

" === Fixes ===
" Do not apply JSX to all JavaScript files
let g:jsx_ext_required = 1

" === netrw ===
let g:netrw_banner=0    " disable banner

" === ale ===
" the cats are back in town
let g:ale_sign_column_always = 1
let g:ale_sign_error="ðŸ™€"
let g:ale_sign_warning="ðŸ˜¿"
let g:ale_sign_info="ðŸ˜¼"
let g:ale_sign_style_error="ðŸ™€"
let g:ale_sign_style_warning="ðŸ˜¿"
highlight clear ALEErrorSign
highlight clear ALEWarningSign

" fix problems when saving
let g:ale_fix_on_save=1
let g:ale_fixers = {
\   'javascript': ['prettier', 'eslint'],
\}

" === Mappings ===
" Clear the search buffer when hitting return
nnoremap <CR> :nohlsearch<cr>

" Fuzzy Finder with Ctrl+P
nnoremap <C-p> :<C-u>FZF<cr>

" Go to definition
nnoremap <Leader>d :ALEGoToDefinition<cr>

" Find references
nnoremap <Leader>r :ALEFindReferences<cr>

" Run Tests
nnoremap <Leader>t :TestFile<cr>
nnoremap <Leader>T :TestSuite<cr>
